<p id="notice"><%= notice %></p>

<h1>Store</h1>

<% if current_user.try(:admin?) %>
    <%= link_to "Products", products_path %>
<% end %>

<%= paginate @products %>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
    <th>Quantity on hand</th>
    <th>Selling price</th>
    <th>Cost of product</th>
    <th>Shipping weight</th>
    <th>Thumbnail</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.quantity_on_hand %></td>
        <td><%= number_to_currency product.selling_price %></td>
        <td><%= number_to_currency product.cost_of_product %></td>
        <td><%= product.shipping_weight %></td>
        <td><%= image_tag product.thumbnail %></td>
        <td><%= product.image %></td>
        <td><%= link_to 'Show', store_show_path( product.id ) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>


